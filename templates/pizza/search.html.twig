{% extends 'base.html.twig' %}

{% block title %}Pizza! - Rechercher{% endblock %}

{% block main %}
<div class="container">
  <h3>Rechercher pizza</h3>
  <div class="row">
    <form method="GET" class="col s12" autocomplete="off">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <input id="autocomplete-input" name="pizza" type="text" class="validate autocomplete" required>
          <label for="autocomplete-input">Nom de la pizza</label>
        </div>
        <div class="input-field col s12">
          <input class="btn" type="submit" value="Rechercher">
        </div>
      </div>
    </form>

    {% for pizza in pizzas %}
    <div class="col s12 m6 l4">
      <div class="card">
        <div class="card-image">
          <img src="{{ asset('img/' ~ pizza.image) }}">
        </div>
        <div class="card-content">
          <h5>{{ pizza.name }}</h5>
          <p>Prix : {{ pizza.price }} €</p>
        </div>
        <div class="card-action">
          <a href="{{ path('app_pizza_display', { id: pizza.id }) }}" class="blue-grey-text darken-text-3">Voir plus...</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}

{% block scripts %}
  var data = {
    {% for a in all %}
      '{{ a.name }}': null,
    {% endfor %}
  };
  {% if pizzas is empty %}
    var toastHTML = "Aucune Pizza trouvée";
  {% endif %}
{% endblock %}