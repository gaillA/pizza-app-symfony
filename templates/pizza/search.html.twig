{% extends 'base.html.twig' %}

{% block title %}Pizza! - Rechercher{% endblock %}

{% block main %}
<div class="container">
  <h3>Rechercher pizza</h3>
  <div class="row">
    <form method="POST" class="col s12" autocomplete="off">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <input id="autocomplete-input" name="pizza" type="text" class="validate autocomplete" required>
          <label for="autocomplete-input">Nom de la pizza</label>
        </div>
        <div class="input-field col s12">
          <input class="btn" type="submit" value="Valider">
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}

{% block scripts %}
  var data = {
    {% for pizza in pizzas %}
      '{{ pizza.name }}': null,
    {% endfor %}
  };
  {% if error is defined %}
    var toastHTML = "Aucune Pizza trouv√©e";
  {% endif %}
{% endblock %}